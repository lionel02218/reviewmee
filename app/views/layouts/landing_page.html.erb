<!DOCTYPE html>
<html>
  <head>
    <title>Reviewmee</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= render "shared/css"%>
  </head>

  <body>
    <% images = %w[coach.jpg fashion.jpg medical.jpg tradie.jpg] %>
    <header class="hero-section" style="background: url(../img/<%= images[Random.rand(4)] %>) center center no-repeat;background-size:cover">
      <%= render "shared/navbar" %>
      <%= flash_messages %>
      <%= render "shared/welcome_section" %>
    </header>
    <%= yield %>
    <%= render "shared/footer"%>
    <%= render "shared/copy_right"%>
    <%= render "shared/js"%>
  </body>
</html>
